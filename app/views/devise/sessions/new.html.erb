<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs"> 
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email', input_html: { :maxlength =>30, class: 'input-lg' } %>
	<%= f.input :password, required: true, label: false, placeholder: 'Password', input_html: { :maxlength =>30, class: 'input-lg' } %>
	<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'btn-mini btn-info', input_html: { :maxlength =>20, class: 'input-lg' } %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
